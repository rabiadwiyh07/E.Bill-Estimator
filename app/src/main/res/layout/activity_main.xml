<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D7E6CF"
    tools:context=".MainActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6EA73"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title=""
        app:titleTextColor="@android:color/black">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ  E.Bill Estimator ðŸ’¡"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Select Month -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Select Month : "
                android:textColor="#111827"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/monthSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@android:drawable/btn_dropdown" />

            <!-- Enter Year -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Enter Year : "
                android:textColor="#111827"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/yearInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#93C5FD"
                android:hint="ðŸ—“ï¸ Enter Year (e.g. 2025)"
                android:inputType="number"
                android:padding="12dp" />

            <!-- Enter Usage -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Enter Electricity Usage (e.g 236) : "
                android:textColor="#111827"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editMonthlyUsage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#A7F3D0"
                android:hint="ðŸ”Œ Electricity Used (kWh)"
                android:inputType="numberDecimal"
                android:padding="12dp" />

            <!-- TNB Rates Info -->
            <TextView
                android:id="@+id/textTnbRates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingTop="8dp"
                android:text="Refer to TNB Residential Rates:\nâ€¢ 1â€“200 kWh: RM 0.218/kWh\nâ€¢ 201â€“300 kWh: RM 0.334/kWh\nâ€¢ 301â€“600 kWh: RM 0.516/kWh\nâ€¢ 600+ kWh: RM 0.546/kWh\nðŸ’¡ Use RM 0.50 if unsure."
                android:textColor="#555555"
                android:textSize="14sp" />

            <!-- Rate Per kWh -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Enter Rate per kWh used (e.g 0.218): "
                android:textColor="#111827"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#FBCFE8"
                android:hint="ðŸ’¸ Rate per kWh (RM)"
                android:inputType="numberDecimal"
                android:padding="12dp" />

            <!-- Rebate Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text=" ðŸŽ Choose Rebate % (e.g 2%): "
                android:textColor="#111827"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioRebateGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioRebate0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="#111827" />

                <RadioButton
                    android:id="@+id/radioRebate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1%"
                    android:textColor="#111827" />

                <RadioButton
                    android:id="@+id/radioRebate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2%"
                    android:textColor="#111827" />

                <RadioButton
                    android:id="@+id/radioRebate3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3%"
                    android:textColor="#111827" />

                <RadioButton
                    android:id="@+id/radioRebate4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4%"
                    android:textColor="#111827" />

                <RadioButton
                    android:id="@+id/radioRebate5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5%"
                    android:textColor="#111827" />
            </RadioGroup>

            <!-- Estimated Result -->
            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text=""
                android:textColor="#059669"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Final Cost -->
            <TextView
                android:id="@+id/txtFinalCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:text=""
                android:textColor="#1D4ED8"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Button -->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="ðŸ§® Calculate Bill"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:textStyle="bold" />
</LinearLayout>
