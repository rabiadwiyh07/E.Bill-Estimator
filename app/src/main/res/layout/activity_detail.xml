<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF8F3"
    android:padding="24dp"
    android:textColor="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:textColor="#000000">

        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="ðŸ“‹ Bill Details"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textMonthYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Month/Year"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textKwh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="kWh Used"
            android:textSize="18sp"
            android:textColor="#000000" />


        <TextView
            android:id="@+id/textRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Rate"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textRebate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Rebate"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Total Charges"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textFinalCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Final Cost after Rebate"
            android:textSize="18sp"
            android:textColor="#000000"/>

    </LinearLayout>
</ScrollView>
